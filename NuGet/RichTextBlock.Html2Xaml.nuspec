<?xml version="1.0" encoding="utf-8" ?>
<package>
  <metadata>
    <id>RichTextBlock.Html2Xaml</id>
    <version>1.1.0.0</version>
    <authors>Vincent Hoogendoorn [Macaw]</authors>
    <owners>Vincent Hoogendoorn [Macaw]</owners>
    <description>
      RichTextBlock.Html2Xaml adds a Html property to RichTextBlock controls,
      that translates Html formatted text on the fly to the subset of XAML
      that the RichTextBlock control supports, with just two source 
      files that are simple to modify: one C#, one XSLT.
    </description>
    <summary>
       Display HTML formatted text as XAML in a WinRT RichTextBlock control
    </summary>
    <licenseUrl>http://github.com/MacawNL/WinRT-RichTextBlock.Html2Xaml</licenseUrl>
    <projectUrl>http://github.com/MacawNL/WinRT-RichTextBlock.Html2Xaml</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <tags>WinRT Win8 HTML XAML RichTextBlock</tags>
  </metadata>
  <files>
    <file src="..\RichTextBlockHtml2Xaml.xslt" target="content\Common\RichTextBlockHtml2Xaml.xslt" />
    <file src="..\RichTextBlockProperties.cs" target="content\Common\RichTextBlockProperties.cs" />
    <file src="Install.ps1" target="tools\Install.ps1" />
    <file src="Readme.txt" target="Readme.txt" />
  </files>
</package>